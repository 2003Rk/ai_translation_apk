<?xml version="1.0" encoding="utf-8"?>
<!--
    FileProvider paths â€” exposes directories containing the APK
    so the install intent / PackageInstaller can read the file.
-->
<paths xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        cache-path covers Context.getCacheDir()
        The APK is now downloaded directly to the app's private cache
        directory to avoid scoped-storage permission issues on Android 11+.
    -->
    <cache-path
        name="cache"
        path="." />

    <!--
        external-path kept for backward compatibility / factory mode.
    -->
    <external-path
        name="download"
        path="Download/" />

</paths>
